{
  "name": "mern-social-network",
  "version": "1.0.0",
  "description": "Social Network Application",
  "engines": {
    "node": "10.15.3",
    "npm": "6.13.7",
    "yarn": "1.21.1"
  },
  "main": "server.js",
  "scripts": {
    "server": "nodemon server.js",
    "client-install": "( cd ./client && yarn install)",
    "client": "( cd ./client && yarn start)",
    "start": "concurrently \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix && npm run build --prefix client"
  },
  "author": "Adrian Beria",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^2.0.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.12",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.0.0"
  }
}
